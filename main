<head>
  <meta charset="UTF-8">
  <title>Oops… Everything Broke</title>
  <style>
    /* --- Global Styles --- */
    body {
      font-family: Comic Sans MS, cursive, sans-serif;
      background-color: #ff0;
      color: #0f0;
      text-align: center;
      margin: 0;
      padding: 0;
      overflow-x: hidden;
    }

    h1 {
      font-size: 3em;
      animation: jumpTitle 3s infinite;
    }

    @keyframes jumpTitle {
      0% { transform: translateY(0px); }
      50% { transform: translateY(20px); }
      100% { transform: translateY(0px); }
    }

    /* --- Nav Menu --- */
    nav {
      margin: 10px 0;
    }

    nav a {
      display: inline-block;
      margin: 0 10px;
      padding: 5px 15px;
      background-color: #f0f;
      color: #ff0;
      text-decoration: none;
      font-weight: bold;
      transition: all 0.3s;
    }

    /* --- Buttons --- */
    button {
      margin: 10px;
      padding: 10px 20px;
      font-size: 1em;
      background-color: #0ff;
      color: #f00;
      border: 3px dashed #00f;
      cursor: pointer;
      transition: all 0.3s;
    }

    button:hover {
      transform: rotate(10deg) scale(1.2);
    }

    /* --- Form --- */
    form {
      margin: 20px auto;
      padding: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    input {
      margin: 5px;
      padding: 5px;
      font-size: 1em;
    }

    /* --- Spinner --- */
    .spinner {
      margin: 20px auto;
      border: 8px solid #f3f3f3;
      border-top: 8px solid #ff0000;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      animation: spin 2s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* --- Footer --- */
    footer {
      margin-top: 30px;
      font-size: 1.2em;
      animation: flash 1s infinite;
    }

    @keyframes flash {
      0%, 50%, 100% { color: #0f0; }
      25% { color: #f00; }
      75% { color: #00f; }
    }
  </style>
</head>
<body>
  <h1>Oops… Everything Broke</h1>

  <!-- Navigation Menu -->
  <nav>
    <a href="#">Home</a>
    <a href="#">Settings</a>
    <a href="#">Profile</a>
    <a href="#">Logout</a>
    <a href="#">Help</a>
  </nav>

  <!-- Button Chaos -->
  <div>
    <button onclick="randomAction()">Submit</button>
    <button onclick="randomAction()">Cancel</button>
    <button onclick="randomAction()">Maybe?</button>
    <button onclick="randomAction()">Click Me!</button>
  </div>

  <!-- Form of Doom -->
  <form onsubmit="return formAction()">
    <input type="text" placeholder="Enter your dog’s birthday" />
    <input type="text" placeholder="Your favorite color?" />
    <button type="submit">Submit</button>
  </form>

  <!-- Infinite Spinner -->
  <div class="spinner"></div>

  <!-- Footer -->
  <footer>“Confusion is the key to happiness!”</footer>

  <!-- Sounds -->
  <audio id="quack" src="https://www.soundjay.com/button/sounds/button-16.mp3"></audio>
  <audio id="zap" src="https://www.soundjay.com/button/sounds/button-09.mp3"></audio>

  <script>
    // --- Random Navigation Movement ---
    const navLinks = document.querySelectorAll('nav a');
    setInterval(() => {
      navLinks.forEach(link => {
        link.style.marginLeft = Math.random() * 50 + "px";
        link.style.marginTop = Math.random() * 20 + "px";
      });
    }, 2000);

    // --- Random Actions for Buttons ---
    const messages = [
      "Error 404: Your life choices are invalid!",
      "Congratulations! You pressed a button!",
      "Loading… maybe forever",
      "You clicked nothing!",
      "Are you sure? Probably not."
    ];

    function randomAction() {
      alert(messages[Math.floor(Math.random() * messages.length)]);
      // Play random sound
      const sounds = ['quack', 'zap'];
      document.getElementById(sounds[Math.floor(Math.random() * sounds.length)]).play();
    }

    // --- Form Action ---
    function formAction() {
      alert(messages[Math.floor(Math.random() * messages.length)]);
      return false; // prevent actual submission
    }

    // --- Background Color Madness ---
    setInterval(() => {
      document.body.style.backgroundColor = `rgb(${Math.random()*255},${Math.random()*255},${Math.random()*255})`;
      document.body.style.color = `rgb(${Math.random()*255},${Math.random()*255},${Math.random()*255})`;
    }, 1000);
  </script>
</body>
</html>
